[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
color1 = ${xrdb:color1}
color2 = ${xrdb:color2}
color3 = ${xrdb:color3}
color4 = ${xrdb:color4}
color5 = ${xrdb:color5}
color6 = ${xrdb:color6}
color8 = ${xrdb:color8}
color9 = ${xrdb:color9}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[bar/toolbar]
width = 1860
height = 30
offset-y = 30
offset-x = 30
padding = 0
radius = 0.0
override-redirect = true
bottom = false
border-size = 3
border-color = ${xrdb:color8}

;Make bars invisible in full screen
wm-restack = i3
enable-ipc = true

font-0 = Hack:pixelsize=10;2

background = ${colors.background}
foreground = ${colors.foreground}

modules-left = wlan
modules-center = time
modules-right = memory cpu pulseaudio

[module/battery]
type = internal/battery

time-format = %H:%M

label-charging = %time:5%
label-discharging = %time:5%
label-full = FULL

format-full = <label-full>
format-charging = <label-charging>
format-discharging = <label-discharging>

label-discharging-padding = 1
label-charging-padding = 1
label-full-padding = 1

label-full-foreground = ${xrdb:color3}
label-charging-foreground = ${xrdb:color4}
label-discharging-foreground = ${xrdb:color9}

full-at = 99

battery = BAT0
adapter = ADP1

poll-interval = 5

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 5
label-connected =  %essid%
label-disconnected = OFF

format-connected-background = ${colors.background}
format-connected-foreground = ${xrdb:color3}
format-disconnected-background = ${colors.background}
format-disconnected-foreground = ${xrdb:color9}

label-connected-padding = 1
label-disconnected-padding = 1


[module/pulseaudio]
type = internal/pulseaudio

sink = ladspa_output.mbeq_1197.mbeq
use-ui-max = true
interval = 5

format-volume = <label-volume>
format-muted = <label-muted>
label-volume = %percentage:3%%
label-muted = %percentage:3%%
label-muted-padding = 1

format-volume-foreground = ${colors.color2}
format-volume-background = ${colors.background}
format-volume-padding = 1

format-muted-foreground = ${colors.color9}
format-muted-background = ${colors.background}
format-muted-padding = 0
label-volume-foreground = ${colors.foreground}

[module/time]
type = internal/date
time = "%I:%M %p"

format = <label>
format-foreground = ${colors.color4}
format-background = ${colors.background}
format-padding = 0

label = %time%
label-foreground = ${colors.foreground}

[module/cpu]
type = internal/cpu

format = <label>
label = %percentage:3%%

format-foreground = ${colors.color5}
format-background = ${colors.background}

label-foreground = ${colors.foreground}
format-padding = 0

[module/memory]
type = internal/memory

format = <label>
label = %percentage_used:3%%

format-foreground = ${colors.color5}
format-background = ${colors.background}

label-foreground = ${colors.foreground}
format-padding = 0
